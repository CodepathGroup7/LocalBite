<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/sign_up_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:src="@drawable/ic_launcher_background"/>

    <TextView
        android:id="@+id/sign_up_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="24sp"
        android:layout_margin="5dp"
        android:layout_below="@id/sign_up_logo"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/signUpName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:ems="15"
        android:hint="Username"
        android:layout_margin="5dp"
        android:layout_below="@id/sign_up_text"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/signUpPhoneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:ems="15"
        android:layout_margin="5dp"
        android:hint="Phone Number"
        android:inputType="number"
        android:layout_below="@id/signUpName"
        android:layout_centerHorizontal="true"/>


    <EditText
        android:id="@+id/signUpEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:ems="15"
        android:hint="Email"
        android:layout_margin="5dp"
        android:inputType="textEmailAddress"
        android:layout_below="@id/signUpPhoneNum"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/signupPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:ems="15"
        android:hint="Password"
        android:layout_margin="5dp"
        android:inputType="textPassword"
        android:layout_below="@id/signUpEmail"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/signupConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:ems="15"
        android:hint="Confirm Password"
        android:layout_margin="5dp"
        android:inputType="textPassword"
        android:layout_below="@id/signupPassword"
        android:layout_centerHorizontal="true"/>

    <RadioGroup
        android:id="@+id/user_type_rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:layout_below="@id/signupConfirmPassword"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/userTypeCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Customer" />

        <RadioButton
            android:id="@+id/userTypeRestaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Restaurant" />

    </RadioGroup>

    <Button
        android:id="@+id/signUpBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:layout_margin="5dp"
        android:layout_below="@id/user_type_rg"
        android:layout_centerHorizontal="true"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/nav_to_restaurant_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/user_type_rg"
        android:src="@drawable/arrow_right"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:backgroundTint="@color/white"/>


</RelativeLayout>